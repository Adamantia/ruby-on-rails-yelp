<h1>Restaurants</h1>

<ul id="restaurants">

  <div class= col-sm-8 col-sm-offset-2>
   <% @restaurants.each do |restaurant| %>
     <class='name<%= restaurant.name %>'>
     </p> Name: <%= restaurant.name %> </p>
     <p class ='content'> Address: <%= link_to restaurant.address, restaurant_path(restaurant) %>
   <% end %>
</ul>


<%= link_to new_restaurant_path do %>
  <i class="fa fa-plus"></i> Add a new restaurant
<% end %>
